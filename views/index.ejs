<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>

    <link rel="stylesheet" href="/style.css" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined"
    />
  </head>

  <body>
    <section class="side-bar">
      <div class="logo">
        <span class="material-symbols-outlined"> delete_sweep </span>
        Smart Trash
      </div>

      <div class="dashboard-logo" id="dashboard-menu">
        <span class="material-symbols-outlined"> dashboard </span>
        <p>Dashboard</p>
      </div>

      <div class="menu-item">
        <button class="menu-header" data-target="productSubmenu">
          <div class="logo-menu">
            <span class="material-symbols-outlined"> delete_sweep </span>
            <span>Trash List</span>
          </div>
          <span class="arrow">â–¾</span>
        </button>

        <ul class="submenu" id="productSubmenu">
          <% trashData.forEach(({ id, title: trTitle, percentage }) => { %>
          <li>
            <a href="#" detailTrigger data-id="<%= id %>">
              <%= trTitle %>
              <span
                class="<%= percentage >= 70 ? 'badge red' : 'badge green' %>"
              ></span>
            </a>
          </li>
          <% }) %>
        </ul>
      </div>
    </section>

    <section class="main"></section>

    <script src="/script.js"></script>
  </body>
</html>
